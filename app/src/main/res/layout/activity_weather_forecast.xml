<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeatherForecast">

    <ImageView
        android:id="@+id/current_weather"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/spinner"
        android:contentDescription="@string/weather_text"/>

    <TextView
        android:id="@+id/current_temp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/current_weather"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/temp_text"
        android:text="@string/temp"
        android:textSize="16sp">

    </TextView>

    <TextView
        android:id="@+id/min_temp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/temp_text"
        android:layout_marginStart="52dp"
        android:layout_toEndOf="@id/min_text"
        android:text="@string/min">

    </TextView>

    <TextView
        android:id="@+id/max_temp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/min_text"
        android:layout_marginStart="41dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/max_text"
        android:text="@string/max">

    </TextView>

    <TextView
        android:id="@+id/city_name"
        android:layout_width="317dp"
        android:layout_height="61dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="27dp"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true">

    </TextView>

    <ProgressBar
        android:id="@+id/pb"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/city_name" />

    <TextView
        android:id="@+id/temp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/current_weather"
        android:layout_marginTop="3dp"
        android:text="@string/current_temperature"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="100dp"
        android:layout_marginStart="50dp"/>

    <TextView
        android:id="@+id/min_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/temp_text"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="100dp"
        android:text="@string/min_temperature"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/max_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/max_temperature"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="50dp"
        android:layout_below="@id/min_text"/>

</RelativeLayout>